<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){

    $('.add_left, .add_right').click(function(){
      var input_type = $(this).attr('class');
      var num_input = $(this).parent().find('.num_1');
      var cur_num = num_input.val();
      switch(input_type) {
        case 'add_left':
          cur_num --;
          if(cur_num < 1) {
            cur_num = 1;
          }
          break;

        case 'add_right':
          cur_num ++;
          break;
      }
      showdiv(num_input[0]);
      num_input.val(cur_num);
    });
  });
</script>

